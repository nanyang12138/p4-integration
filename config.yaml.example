p4:
  port: your-perforce-server:1666
  user: your_username
  client: your_client_name
  password: ''  # SECURITY: Set via environment variable P4PASSWD
  bin: p4  # or /path/to/p4

# Agent Configuration
agent:
  # The IP/Hostname of THIS machine (Master) that Agents should connect to.
  # Ensure this is reachable from the remote machine.
  master_host: 10.0.0.1  # <--- CHANGE THIS to your Master IP
  master_port: 9090

# SSH Configuration for Bootstrap (Agent Deployment)
ssh:
  host: remote-host  # Use 'localhost' for local execution
  user: username
  port: 22
  # Use key_path or password (key preferred)
  key_path: ~/.ssh/id_rsa
  password: ''  # SECURITY: Set via P4_INTEG_SSH_PASSWORD

# Workspace Configuration
workspace:
  root: /path/to/workspace

# Specs & Defaults
defaults:
  source: //depot/source/...
  target: //depot/target/...

specs:
  example_spec:
    source: //depot/main/...
    target: //depot/branch/...
    description: Example integration spec

# Blocklist: patterns or depot paths to block
blocklist: []

# Test hooks before submit
test_hook:
  command: ''
  args: []

# Submit configuration
submit:
  trial: false  # Set to true for trial mode by default

# P4Push password (for prompts)
p4w_password: ''  # SECURITY: Set via environment variable

# Logging
logging:
  level: INFO
  file: data/p4_integ.log
  max_bytes: 2097152
  backup_count: 5
  json: false

data_dir: data

# Maximum number of jobs that can be queued
max_queue_size: 100

# Auto-cleanup on error: revert files and delete changelist/shelf when job fails
auto_cleanup_on_error: true

# Environment initialization (customize for your environment)
env_init:
  enabled: true  # Set to false to skip environment initialization
  init_script: /proj/verif_release_ro/cbwa_initscript/current/cbwa_init.bash
  bootenv_cmd: bootenv
  name_check_tool: /tool/aticad/1.0/src/perforce/name_check_file_list

# Auto-resolve configuration
auto_resolve:
  enabled: true      # Enable automatic resolve checking
  interval: 60       # Check interval in seconds
  auto_submit: true  # Auto-submit when conflicts cleared

# Features
features:
  advanced_ui: true